{
  "mcpServers": {
    "data-forge": {
      "command": "uv",
      "args": [
        "--directory",
        "/your-path-to/data-forge-mcp",
        "run",
        "-m",
        "src.server"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "WARNING",
        "NUMBA_DISABLE_CUDA": "1",
        "NUMBA_ENABLE_CUDASIM": "1"
      }
    }
  }
}
